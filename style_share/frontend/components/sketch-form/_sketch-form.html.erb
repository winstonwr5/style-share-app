<%= form_for(sketch) do |f| %>

<div class="user-sketch-form">
    <ul>
        <div class="user-sketch-form--input">
            <li>
                <%= f.label :artist %>
                <%= f.text_field :artist %>
            </li>

            <li>
                <%= f.label :description %>
                <%= f.text_field :description %>
            </li>

            <li>
                <%= f.label :code %>
                <%= f.text_area :code %>
            </li>
        </div>

        <li>
            <%= f.button %>
        </li>
