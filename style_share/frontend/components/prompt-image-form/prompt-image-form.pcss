.prompt-image-form {
    display: flex;
    width: 100%;
    height: 100%;

    &--input {
    flex: 0 1 auto;
    padding: 12px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    font-size: 18px;
    outline: none;
    transition: opacity 150ms;
    cursor: pointer;

    &:hover,
    &:focus {
      opacity: 0.7;
    }
  }
}

label {
    font: 1rem 'Fira Sans', sans-serif;
}
